@model WebApplication1.Data.ServiceItems
@{
    ViewBag.Title = "Редактирование пользователя";
}
<form asp-action="edit" asp-controller="ServiceItems" asp-route-id="@Model">
    <div class="form-group">
        <label asp-for="MetaDescription" class="control-label">Имя</label>
        <input type="text" asp-for="MetaDescription" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="MetaTitle" class="control-label">Возраст</label>
        <input type="text" asp-for="MetaTitle" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Сохранить" class="btn btn-default" />
    </div>
</form>